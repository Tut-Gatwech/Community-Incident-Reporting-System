<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="false">

    <display-name>Community Incident Reporting System</display-name>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Session timeout configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- SERVLETS -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.incident.controller.AuthController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.incident.controller.DashboardController</servlet-class>
    </servlet>



    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.incident.test.TestServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.incident.controller.AdminController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>NotificationController</servlet-name>
        <servlet-class>com.incident.controller.NotificationController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>IncidentController</servlet-name>
        <servlet-class>com.incident.controller.IncidentController</servlet-class>
    </servlet>



    <!-- SERVLET MAPPINGS -->
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>



    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard/*</url-pattern>
    </servlet-mapping>



    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin-user/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>NotificationController</servlet-name>
        <url-pattern>/notifications/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IncidentController</servlet-name>
        <url-pattern>/incident/*</url-pattern>
    </servlet-mapping>



    <!-- Character encoding filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.incident.controller.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Authentication filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.incident.controller.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/citizen/*</url-pattern>
        <url-pattern>/officer/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/dashboard/*</url-pattern>
        <url-pattern>/incident/*</url-pattern>
        <url-pattern>/notifications/*</url-pattern>
        <url-pattern>/admin-user/*</url-pattern>
    </filter-mapping>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

</web-app>